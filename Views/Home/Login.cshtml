@using ProjetoEmprestimoLivroCurso.Dto.Home
@model LoginDto

@{
    Layout = "_LayoutDeslogada"; 
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-sucess text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<div class="container" style="margin-top: 25rem; width: 75rem; background: #dfdfdf; color: black; font-size: 16px; padding: 78px; border-radius:5px">
    <form method="post" asp-action="Login" asp-controller="Home">
        <div class="mb-3">
            <label class="form-label">E-mail:</label>
            <input type="email" class="form-control" asp-for="Email"/>   
            <span asp-validation-for="Email" class="text-danger"></span>    
        </div>
        <div class="mb-3">
            <label class="form-label">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <p class="form-label">Não tem conta? <a asp-action="Cadastrar" asp-controller="Usuario" asp-route-id="1">Cadastre-se</a>   </p>
        </div>

        <button type="submit" class="btn btn-primary w-100" style="font:16px">Entrar</button>
    </form>
</div>